{
  "compilerOptions": {
    "target": "ES2020",                                  
    "lib": ["ES2020"], 
    "module": "ESNext",                                                            
    "moduleResolution": "Node",                                                  
    "outDir": "./dist",                                 
    
    "types": ["node"],                                     
    "esModuleInterop": true,                                                 
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
   
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"]  
}